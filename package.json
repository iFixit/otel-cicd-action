{
  "private": true,
  "name": "otel-cicd-action",
  "version": "1.9.0",
  "description": "Github Action that export CI/CD workflows to any endpoint compatible with OpenTelemetry",
  "scripts": {
    "prepare": "husky",
    "lint:fix": "eslint --cache --fix .",
    "lint:ci": "eslint .",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "build": "tsc && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "cross-env NODE_ENV=test DOTENV_CONFIG_PATH=./.env.test jest",
    "test:watch": "cross-env NODE_ENV=test DOTENV_CONFIG_PATH=./.env.test jest --watch",
    "test:ci": "cross-env NODE_ENV=test jest --collect-coverage -ci",
    "all": "npm run format && npm run lint:fix && npm run build && npm run test"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "keywords": [],
  "author": "Corentin Musard <corentin.musard+dev@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^1.1.2",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.56.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.56.0",
    "@opentelemetry/resources": "^1.29.0",
    "@opentelemetry/sdk-trace-base": "^1.29.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@octokit/rest": "^21.0.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vercel/ncc": "^0.38.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.7",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*": [
      "prettier --write .",
      "eslint --cache --fix ."
    ]
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â¯ ",
    "classNameTemplate": "{classname}",
    "includeConsoleOutput": "true",
    "reportTestSuiteErrors": "true"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
